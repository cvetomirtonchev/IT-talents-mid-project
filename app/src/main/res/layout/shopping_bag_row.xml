<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/prod_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/clothing"
        android:layout_weight="2" />
    <LinearLayout
        android:id="@+id/prod_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
        android:id="@+id/prod_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Prod Name"
        android:textAlignment="center"
        android:textSize="20sp"/>

        <TextView
            android:id="@+id/prod_brand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Prod Brand"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/prod_size"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Prod Size"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/prod_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Prod Price"
            android:textAlignment="center"
            android:textSize="20sp"/>


    </LinearLayout>
