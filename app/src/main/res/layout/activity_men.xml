<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/Black"
    tools:context="tonchev.sportsdirect.MenActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView

            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="verdana"
            android:text="SPORTS"
            android:textColor="@color/colorPrimaryDark"
            android:textColorLink="@color/Blue"
            android:textSize="24sp" />

        <TextView

            android:id="@+id/direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="verdana"
            android:text="DIRECT.com"
            android:textColor="@color/Red"
            android:textColorLink="@color/Red"
            android:textSize="24sp" />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:text="@string/man"
        android:id="@+id/men"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/footwear"
            android:background="@drawable/shoes"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/White"
            android:onClick="callFootwear"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/clothing"
            android:background="@drawable/clothing2"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/White"
            android:onClick="callClothing"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/accessories"
            android:background="@drawable/watches"
            android:textSize="25sp"
            android:textColor="@color/White"
            android:id="@+id/acces_men"/>


    </LinearLayout>

</LinearLayout>
