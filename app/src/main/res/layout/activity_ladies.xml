<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ladies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/White"
    tools:context="tonchev.sportsdirect.MainActivity"
    android:weightSum="1">

    <TextView

        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="verdana"
        android:textColorLink="@color/Blue"
        android:text="SPORTS"
        android:textSize="24sp"
        android:id="@+id/sports" />
    <TextView

        android:textColor="@color/Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="verdana"
        android:textColorLink="@color/Red"
        android:text="DIRECT.com"
        android:textSize="24sp"
        android:id="@+id/direct" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LADIES"
        android:textSize="35sp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/footwear"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">
        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Footwear"
            android:textSize="20sp"/>

    </LinearLayout>
    <View
        android:layout_width="50dp"
        android:layout_height="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/womanclothing"/>
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothing"
            android:textSize="20sp"/>
        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            />

    </LinearLayout>

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/acces"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">
        <View
            android:layout_width="55dp"
            android:layout_height="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accesories"
            android:textSize="20sp"/>

    </LinearLayout>


</LinearLayout>
